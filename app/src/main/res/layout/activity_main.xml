<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/prs"
    tools:context="com.example.chauhan.percento.MainActivity">


    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="280dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.496"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0">

        <RelativeLayout

            android:id="@+id/relative_vanish"
            android:layout_width="380dp"
            android:layout_height="200dp"
            android:layout_gravity="center">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/button_per2unit"
                android:layout_width="140dp"
                android:layout_height="100dp"
                android:background="@drawable/roundedbuttonnew"
                android:elevation="10dp"
                android:padding="10dp"
                android:text="Percentage to Unit"
                android:textColor="@color/white"
                android:layout_marginLeft="33dp"
                android:layout_marginStart="33dp"
                android:layout_alignTop="@+id/button_unit2per"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/button_unit2per"
                android:layout_width="140dp"
                android:layout_height="100dp"
                android:background="@drawable/roundedbutton"
                android:elevation="10dp"
                android:padding="10dp"
                android:text="Unit to Percentage"
                android:textColor="@color/white"
                android:layout_marginLeft="27dp"
                android:layout_marginStart="27dp"
                android:layout_marginBottom="18dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/button_per2unit"
                android:layout_toEndOf="@+id/button_per2unit" />

        </RelativeLayout>

        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="20sp"
            android:background="@color/primary_dark"
            android:gravity="center"
            android:text="Percento"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>
